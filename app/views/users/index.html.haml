.col-md-3
  .jumbotron{ style: 'padding: 20px; border: 1px solid #bbb; box-shadow: 1px 1px 5px rgba(0,0,0,0.4);' }
    .SnCshow
      session[:user_id_auth] =
      = session[:user_id] || 'nil'
      %br
      cookies[:auth_token_session] =
      = cookies[:auth_token] || 'nil'

.col-md-6
  %table.table-bordered
    %tr
      %th
        Id
      %th
        Login
      %th
        Password(encoded)
      %th
        Created at
    - @users.each do |user|
      %tr{style: "#{'border: 2px solid red;' if @current_user && @current_user.id == user.id}"}
        %td
          = user.id
        %td
          = user.login
        %td
          = user.password_secret
        %td
          = user.created_at