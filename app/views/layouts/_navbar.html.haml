%nav.navbar.navbar-inverse
  .container-fluid
    .collapse.navbar-collapse
      .navbar-header
        %a.navbar-brand{href: root_path}
          - if user_signed_in?
            Hi,
            = current_user.login
          - else
            Hi, Guest
        .mods
          %a.navbar-brand{href: modes_change_path(mode: 0), style: "#{'color:red;' if cookies[:demo_mode] == '0' }"}
            Session
          %a.navbar-brand{href: modes_change_path(mode: 1), style: "#{'color:red;' if cookies[:demo_mode] == '1' }"}
            Cookie
          %a.navbar-brand{href: modes_change_path(mode: 2), style: "#{'color:red;' if cookies[:demo_mode] == '2' }"}
            AuthToken
          %a.navbar-brand{href: modes_change_path(mode: 3), style: "#{'color:red;' if cookies[:demo_mode] == '3' }"}
            AuthToken + Session

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to 'Logout', sessions_path, method: :delete
        - else
          %li= link_to 'Login', new_sessions_path
          %li= link_to 'Sign up', new_users_path